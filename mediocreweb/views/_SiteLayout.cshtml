@inherits ServiceStack.Razor.ViewPage
@{
  const string siteTitle = "Mediocresoft";
  var siteHeader = siteTitle;
  string pageHeader = ViewBag.PageHeader;
  string pageTitle = ViewBag.PageTitle;
  var computedDocumentTitle = siteTitle;
  if (!String.IsNullOrWhiteSpace(pageTitle)) {
    computedDocumentTitle += " - " + pageTitle;
  }
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <title>@computedDocumentTitle</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="@Url.Content("~/css/bootstrap.min.css")" rel="stylesheet" media="screen"/>
</head>
<body>
  <div class="container">
    <div class="row">
      <header class="col-12">
        <h1><a href="@Url.Content("~/")">@siteHeader</a></h1>
      </header>
    </div>
    <div class="row">
      <div class="col-12 col-lg-9">
        @RenderBody()
      </div>
      <div class="col-12 col-lg-3">right side</div>
    </div>
    <div class="row">
      <footer class="col-12">
        footer
      </footer>
    </div>
  </div>
  <script src="@Url.Content("~/js/jquery-1.10.2.min.js")"></script>
  <script src="@Url.Content("~/js/bootstrap.min.js")"></script>
</body>
</html>
